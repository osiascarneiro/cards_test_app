<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/transactionLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/label_transaction_text_size"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/transactionValue"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/transactionUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/description_transaction_text_size"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/transactionLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/transactionValue"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/transactionValue"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="@dimen/label_transaction_text_size"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>